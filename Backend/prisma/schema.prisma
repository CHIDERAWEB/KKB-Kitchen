generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      String   @default("user")
  recipes   Recipe[]
}

model Recipe {
  id           Int       @id @default(autoincrement())
  title        String
  ingredients  String[]
  instructions String[]
  imageUrl     String?
  authorId     Int
  createdAt    DateTime  @default(now())
  likedBy      Int[]
  views        Int       @default(0)
  adminNote    String?
  updatedAt    DateTime  @updatedAt
  status       String    @default("pending")
  cookingTime  String?
  difficulty   String?
  ratings      Json?
  servings     String?
  comments     Comment[]
  author       User      @relation(fields: [authorId], references: [id])
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  recipeId  Int
  userId    Int
  userName  String
  createdAt DateTime @default(now())
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}
