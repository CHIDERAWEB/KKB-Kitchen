generator client {
    provider     = "prisma-client-js"
 }


datasource db {
  provider = "postgresql"
 }

// This matches your PRD's Account Creation requirements [cite: 25]
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String   // This will store the hashed password
  recipes   Recipe[] // Relation for Recipe Uploads [cite: 30]
  createdAt DateTime @default(now())
  role  String  @default("user")
}

// Foundation for the Recipe Discovery feature [cite: 26]
model Recipe {
  id          Int      @id @default(autoincrement())
  title       String
  ingredients String[]
  instructions String[]
  imageUrl    String?  // For Cloudinary storage [cite: 60]
  author      User     @relation(fields: [authorId], references: [id])
  authorId    Int
  likedBy      Int[]     // Stores IDs of users who liked this
  comments     Comment[] // Relation to comments
  status       String   @default("pending")
  views        Int       @default(0) // New: Total views counter
  createdAt DateTime @default(now())
  adminNote    String?
  updatedAt    DateTime @updatedAt
}


model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  recipeId  Int
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  userId    Int
  userName  String   // Storing name for quick display
  createdAt DateTime @default(now())
}